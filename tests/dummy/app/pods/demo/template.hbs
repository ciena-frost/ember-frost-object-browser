{{#frost-object-browser as |slot|}}
  {{#block-slot slot 'info-bar'}}
    {{#frost-info-bar as |slot|}}
      {{#block-slot slot 'title'}}
        Resources
      {{/block-slot}}
      {{#block-slot slot 'summary'}}
        {{model.resources.length}} - L3VPN Services
      {{/block-slot}}
      {{#block-slot slot 'actions' as |action|}}
        {{action.button
          icon='frost/infobar-create'
          onClick=(action 'onCreate')
          text='Create'
        }}
      {{/block-slot}}
    {{/frost-info-bar}}
  {{/block-slot}}
  {{#block-slot slot 'filters'}}
    {{frost-object-browser-filter filters=filters onFilter=onFilter}}
  {{/block-slot}}
  {{#block-slot slot 'view' as |selections onSelect|}}
    {{#frost-object-browser-content
      detailLevel='high'
      itemsPerPage=6
      model=model.model

      values=model.resources
      viewSchema=viewSchema
    as |slot|}}
      {{#block-slot slot 'controls' as |control|}}
        {{control.pagination}}
        {{control.expansion
          onDetailChange=(action 'onDetailChange')
        }}
      {{/block-slot}}
      {{#block-slot slot 'view' as |display|}}
        {{#frost-list onSelect=(action onSelect) selections=selections.selectedItems records=display.computedValues as |record|}}
          {{#frost-object-browser-list-item model=record detailLevel=display.detailLevel as |value|}}
            {{frost-bunsen-detail
              bunsenModel=display.model
              bunsenView=display.computedViewLevel
              renderers=display.renderers
              value=value
            }}
          {{/frost-object-browser-list-item}}
        {{/frost-list}}
      {{/block-slot}}
    {{/frost-object-browser-content}}
  {{/block-slot}}
  {{#block-slot slot 'actions' as |action|}}
    {{action.button
      onActionClick=(action 'onActionClick' 'details')
      multiSelect=true
      text='Details'
    }}
    {{action.button
      onActionClick=(action 'onActionClick' 'delete')
      multiSelect=true
      text='delete item'
    }}
    {{action.button
      onActionClick=(action 'onActionClick' 'edit')
      text='Edit'
    }}
  {{/block-slot}}
{{/frost-object-browser}}
