{{yield}}
{{#yield-slot 'controls'}}
  <div class="tools">
    <div class="sort"/>
    {{yield (block-params
      (hash
        pagination=(component
        'frost-object-browser-paginator'
          itemsPerPage=content.itemsPerPage
          page=content.computedPageNumber
          total=content.computedValuesTotal
        )
        expansion=(component
        'frost-object-browser-button-bar'
          detailLevel=content.detailLevel
          viewLevel=content.viewSchema
        )
      )
      (action onPageChanged)
      (action onDetailChange)
    )}}
  </div>
{{/yield-slot}}
{{#yield-slot 'view'}}
  {{yield (block-params
    content
    (action onSelect)
  )}}
{{/yield-slot}}
{{#yield-slot 'selection-actions'}}
  <div class="actions">
    {{yield (block-params
      (hash
        button=(component
        'frost-object-browser-action-bar'
        )
      )
    )}}
  </div>
{{/yield-slot}}
