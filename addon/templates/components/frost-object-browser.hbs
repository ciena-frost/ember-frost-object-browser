{{yield}}
{{#yield-slot 'info-bar'}}
  {{yield (block-params
    this
  )}}
{{/yield-slot}}
<div class="body">
  {{#yield-slot 'filters'}}
    {{yield (block-params filters onFilter)}}
  {{/yield-slot}}
  {{#yield-slot 'content'}}
    {{yield (block-params
      this
      (action 'onPageChanged')
      (action 'onDetailChange')
      (action 'onSelect')
    )}}
  {{/yield-slot}}
</div>
