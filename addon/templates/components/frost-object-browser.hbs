{{yield}}
<div class="frost-info-bar">
  <div class="title">
    {{#yield-slot 'info-bar'}}
      {{yield (block-params this)}}
    {{/yield-slot}}
  </div>
  <div class="top-buttons" background-color='red'>
    {{#yield-slot 'app-actions'}}
      {{yield (block-params (action 'onCreate'))}}
    {{/yield-slot}}
  </div>
</div>
<div class="body">
  {{#yield-slot 'filters'}}
    {{yield (block-params filters onFilter)}}
  {{/yield-slot}}
  {{#yield-slot 'content'}}
    {{yield (block-params
      this
      (action 'onPageChanged')
      (action 'onDetailChange')
      (action 'onSelect')
    )}}
  {{/yield-slot}}
</div>
