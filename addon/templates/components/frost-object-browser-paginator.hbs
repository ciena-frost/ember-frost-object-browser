<div class="pagination">
  <div class="button-bar left">
    {{frost-button
      disabled=leftButtonsDisabled
      icon="frost/double-chevron-left"
      onClick=(action onPageChanged 'begin')
      priority="tertiary"
      size="small"
    }}

    {{frost-button
      disabled=leftButtonsDisabled
      icon="frost/chevron-left"
      onClick=(action onPageChanged 'back')
      priority="tertiary"
      size="small"
    }}
  </div>
  <span class="text">{{paginationText}}</span>
  <div class="button-bar right">
    {{frost-button
      disabled=rightButtonsDisabled
      icon="frost/chevron-left"
      onClick=(action onPageChanged 'forward')
      priority="tertiary"
      size="small"
    }}
    {{frost-button
      disabled=rightButtonsDisabled
      icon="frost/double-chevron-left"
      onClick=(action onPageChanged 'end')
      priority="tertiary"
      size="small"
    }}
  </div>
</div>
